@model IEnumerable<ApartmanProjeMVC.Models.ViewModel>
@{
    ViewBag.Title = "IslemTablo";
    Layout = "~/Views/Shared/Yonetim.cshtml";
}

<h2>IslemTablo</h2>

<!DOCTYPE html>

<html>
@using (Html.BeginForm("IslemTablo", "Calculation", FormMethod.Get))
{


    <body>


        <table>
            <tr>
                <td>
                    @Html.DropDownList("search", new SelectList(ViewBag.uyeler, "id", "Ad"), new { @class = "form-control" })

                </td>
                
                <td>
                    <input type="submit" name="btnSubmit" value="Submit" />
                </td>
            </tr>

        </table>



        <div class="container-fluid py-4">

            <table class="table table-striped table-bordered">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Daire  No</th>
                        <th>Tutar</th>
                        <th>Tarih</th>
                        <th>Açıklama</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.uyeler.Ad)</td>
                            <td>@Html.DisplayFor(m => item.uyeler.Daire)</td>
                            <td>@Html.DisplayFor(m => item.islemler.Tutar)</td>
                            <td>@Html.DisplayFor(m => item.uyeler.tarih)</td>
                            <td>@Html.DisplayFor(m => item.islemler.Aciklama)</td>

                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </body>
}
</html>
